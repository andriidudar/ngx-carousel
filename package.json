{
    "name": "ngx-carousel",
    "version": "1.3.7",
    "main": "bundles/ngxcarousel.umd.js",
    "module": "index.js",
    "description": "Angular Carousel with customizable option with touch support and even more. Try it then say about it",
    "scripts": {
        "transpile": "ngc ",
        "package": "rollup -c",
        "minify": "uglifyjs dist/bundles/ngxcarousel.umd.js --screw-ie8 --compress --mangle --comments --output dist/bundles/ngxcarousel.umd.min.js",
        "build": "npm run transpile && npm run package && npm run minify"
    },
    "devDependencies": {
        "@angular/compiler": "6.1.7",
        "@angular/compiler-cli": "6.1.7",
        "rollup": "^0.43.0",
        "typescript": "^2.9.2",
        "uglify-js": "^3.4.9"
    },
    "dependencies": {
        "@angular/common": "6.1.7",
        "@angular/core": "6.1.7",
        "@angular/platform-browser": "6.1.7",
        "@types/hammerjs": "^2.0.36",
        "hammerjs": "^2.0.8",
        "rxjs": "6.2.0"
    },
    "peerDependencies": {
        "@angular/common": ">=6.0.0",
        "@angular/core": ">=6.0.0"
    }
}
